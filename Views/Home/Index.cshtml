@model IEnumerable<TodoApp.Models.TodoItems >


<h2>To-Do List</h2>

<form asp-action="Create" method="post">
    <input type="text" name="Title" placeholder="Görev Ekle" required />
    <button type="submit">Ekle</button>
</form>

<ul>
@foreach (var item in Model)
{
    <li>
        <form asp-action="Complete" method="post">
            <input type="hidden" name="id" value="@item.Id" />
            <span style="text-decoration: @(item.IsCompleted ? "line-through" : "none")">@item.Title</span>
            <button type="submit">Tamamlandı</button>
        </form>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@item.Id" />
            <button type="submit">Sil</button>
        </form>
    </li>
}
</ul>
